<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/home_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="경기도 시흥시 정왕동"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.431"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_place" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/c1"
                    android:layout_width="350dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background_white_stroke"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/h1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/designer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/h_t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="노랑헤어"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.184"
                        app:layout_constraintStart_toEndOf="@+id/h1"
                        app:layout_constraintTop_toTopOf="@+id/h1" />

                    <TextView
                        android:id="@+id/h_s1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="5.0 (0)"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/h_t1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/h_t1"
                        app:layout_constraintTop_toBottomOf="@+id/h_t1" />

                    <TextView
                        android:id="@+id/h_w1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="600m"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="@+id/h_t1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.641"
                        app:layout_constraintStart_toEndOf="@+id/h_t1"
                        app:layout_constraintTop_toTopOf="@+id/h_t1"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/c2"
                    android:layout_width="350dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/button_background_white_stroke"
                    app:layout_constraintEnd_toEndOf="@+id/c1"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="@+id/c1"
                    app:layout_constraintTop_toBottomOf="@+id/c1">

                    <ImageView
                        android:id="@+id/h2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/designer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/h_t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조세헤어"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.184"
                        app:layout_constraintStart_toEndOf="@+id/h2"
                        app:layout_constraintTop_toTopOf="@+id/h2" />

                    <TextView
                        android:id="@+id/h_s2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="5.0 (0)"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/h_t2"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/h_t2"
                        app:layout_constraintTop_toBottomOf="@+id/h_t2" />

                    <TextView
                        android:id="@+id/h_w2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="620m"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="@+id/h_t2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.641"
                        app:layout_constraintStart_toEndOf="@+id/h_t2"
                        app:layout_constraintTop_toTopOf="@+id/h_t2"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/c3"
                    android:layout_width="350dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/button_background_white_stroke"
                    app:layout_constraintEnd_toEndOf="@+id/c2"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="@+id/c2"
                    app:layout_constraintTop_toBottomOf="@+id/c2">

                    <ImageView
                        android:id="@+id/h3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/designer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/h_t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="블루클럽"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.184"
                        app:layout_constraintStart_toEndOf="@+id/h3"
                        app:layout_constraintTop_toTopOf="@+id/h3" />

                    <TextView
                        android:id="@+id/h_s3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="5.0 (0)"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/h_t3"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/h_t3"
                        app:layout_constraintTop_toBottomOf="@+id/h_t3" />

                    <TextView
                        android:id="@+id/h_w3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="650m"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="@+id/h_t3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.641"
                        app:layout_constraintStart_toEndOf="@+id/h_t3"
                        app:layout_constraintTop_toTopOf="@+id/h_t3"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/c4"
                    android:layout_width="350dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/button_background_white_stroke"
                    app:layout_constraintEnd_toEndOf="@+id/c3"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="@+id/c3"
                    app:layout_constraintTop_toBottomOf="@+id/c3">

                    <ImageView
                        android:id="@+id/h4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/designer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/h_t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조세헤어"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.184"
                        app:layout_constraintStart_toEndOf="@+id/h4"
                        app:layout_constraintTop_toTopOf="@+id/h4" />

                    <TextView
                        android:id="@+id/h_s4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="5.0 (0)"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/h_t4"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/h_t4"
                        app:layout_constraintTop_toBottomOf="@+id/h_t4" />

                    <TextView
                        android:id="@+id/h_w4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="620m"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="@+id/h_t4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.641"
                        app:layout_constraintStart_toEndOf="@+id/h_t4"
                        app:layout_constraintTop_toTopOf="@+id/h_t4"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</LinearLayout>